function isANumber(str){
  return !/\D/.test(str);
}
function alphanumeric(inputtxt)
{ 
  if( isANumber(inputtxt ) )
   return false ;

   var letters = /^[0-9a-zA-Z\-\.\ ]+$/;
   return (inputtxt.match(letters)) ;

}
